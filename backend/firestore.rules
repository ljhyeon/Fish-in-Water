rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 경매 컬렉션 규칙
    match /auctions/{auctionId} {
      // 모든 사용자가 경매 목록과 상세 정보를 읽을 수 있음
      allow read: if true;
      
      // 인증된 판매자만 경매를 생성할 수 있음
      allow create: if request.auth != null 
        && request.auth.uid == resource.data.seller.id
        && request.auth.token.user_type == 'seller';
      
      // 경매 소유자만 자신의 경매를 수정할 수 있음
      allow update: if request.auth != null 
        && request.auth.uid == resource.data.seller.id;
      
      // 경매 삭제는 소유자만 가능 (또는 관리자)
      allow delete: if request.auth != null 
        && (request.auth.uid == resource.data.seller.id 
            || request.auth.token.admin == true);
    }
    
    // 사용자 프로필 컬렉션 규칙
    match /users/{userId} {
      // 사용자는 자신의 프로필만 읽고 쓸 수 있음
      allow read, write: if request.auth != null 
        && request.auth.uid == userId;
    }
    
    // 입찰 기록 컬렉션 (향후 추가 예정)
    match /bids/{bidId} {
      // 인증된 사용자만 입찰 기록을 읽을 수 있음
      allow read: if request.auth != null;
      
      // 입찰자 본인만 입찰을 생성할 수 있음
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.bidder_id;
    }
    
    // 기본적으로 모든 접근 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 